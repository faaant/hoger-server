{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@entities/*": ["database/entities/*"],
      "@common/*": ["common/*"] 
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  }
}
